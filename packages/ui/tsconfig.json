{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "incremental": false,
    "isolatedModules": true,
    "lib": ["es2022", "DOM", "DOM.Iterable"],
    "module": "NodeNext",
    "moduleDetection": "force",
    "moduleResolution": "NodeNext",
    "jsx": "react-jsx",
    "noUncheckedIndexedAccess": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "ES2022",
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@repo/api/*": ["@repo/api/*"],
      "@repo/ui/*": ["./src/*"]
    }
  },
  "include": ["src", "../../apps/web/src/components/contact-form.tsx"],
  "exclude": ["node_modules", "dist"]
}
